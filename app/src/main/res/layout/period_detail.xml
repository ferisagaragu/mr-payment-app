<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/unique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/badge_unique"
                android:fontFamily="@font/raleway_regular"
                android:text="demoData"
                android:textAlignment="center"
                android:textColor="@color/badge_unique_color" />

            <TextView
                android:id="@+id/monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/badge_monthly"
                android:fontFamily="@font/raleway_regular"
                android:text="demoData"
                android:textAlignment="center"
                android:textColor="@color/badge_monthly_color" />

            <TextView
                android:id="@+id/recurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/badge_recurrent"
                android:fontFamily="@font/raleway_regular"
                android:text="demoData"
                android:textAlignment="center"
                android:textColor="@color/badge_recurrent_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mayo 2020"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/raleway_regular" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>